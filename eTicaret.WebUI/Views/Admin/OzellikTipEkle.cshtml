
@{
    ViewBag.Title = "Ozellik Tip Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<eTicaret.WebUI.Models.Kategori>

<br /><br />
<br /><br />
      <div class="row">
          <div class="col-lg-12">
              <section class="panel">
                  <header class="panel-heading">
                      Özellik Tip Ekle
                  </header>
                  <div class="panel-body">
                      <form action="/Admin/OzellikTipEkle" class="form-horizontal tasi-form" enctype="multipart/form-data" method="post">
                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Özellik Tip Adı:</label>
                              <div class="col-sm-10">
                                  <input type="text" class="form-control" name="Adi">
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                              <div class="col-sm-10">
                                  <input name="Aciklama" type="text" class="form-control">
                              </div>
                          </div>
                          <select class="form-control m-bot15" name="KategoriID">
                              @foreach (var ktg in Model)
                              {
                                  <option value="@ktg.Id">@ktg.Adi</option>
                              }
                          </select>
                          <button class="btn btn-danger" type="submit">Kaydet</button>
                      </form>
                  </div>
              </section>
          </div>
      </div>
