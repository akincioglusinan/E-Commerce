
@{
    ViewBag.Title = "OzellikDegerEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<eTicaret.WebUI.Models.OzellikTip>

<br /><br />
<br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Özellik Deger Ekle
            </header>
            <div class="panel-body">
                <form action="/Admin/OzellikDegerEkle" class="form-horizontal tasi-form" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <select class="form-control m-bot15" name="OzellikTipID">
                            @foreach (var tip in Model)
                            {
                                <option value="@tip.Id">@tip.Adi</option>
                            }
                        </select>
                        <label class="col-sm-2 col-sm-2 control-label">Özellik Deger Adı:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Adi">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input name="Aciklama" type="text" class="form-control">
                        </div>
                    </div>
                    <button class="btn btn-danger" type="submit">Kaydet</button>
                </form>
            </div>
        </section>
    </div>
</div>

