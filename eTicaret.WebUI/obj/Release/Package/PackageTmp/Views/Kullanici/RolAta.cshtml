
@{
    ViewBag.Title = "RolAta";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br /><br />
<br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ünvan Atama Sayfası
            </header>
            <div class="panel-body">
                <form action="/Kullanici/RolAta" class="form-horizontal tasi-form" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Ünvan Adı:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="KullaniciAdi" value="@Model" disabled="disabled">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Ünvan:</label>
                        <select class="col-sm-2" name="Rol">
                            @foreach (string rol in ViewBag.Roller)
                            {
                                <option value="@rol">@rol</option>
                            }

                        </select>
                    </div>

                    <button class="btn btn-danger" type="submit">Kaydet</button>
                </form>
            </div>
        </section>
    </div>
</div>