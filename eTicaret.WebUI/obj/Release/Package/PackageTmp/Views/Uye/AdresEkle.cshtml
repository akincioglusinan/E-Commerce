
@{
    ViewBag.Title = "AdresEkle";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

@model eTicaret.WebUI.Models.aspnet_Users

<link rel="shortcut icon" href="/Content/Admin/img/favicon.png">
<!-- Bootstrap core CSS -->
<link href="/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
<link href="/Content/Admin/css/bootstrap-reset.css" rel="stylesheet">
<!--external css-->
<link href="/Content/Admin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
<!-- Custom styles for this template -->
<link href="/Content/Zeon/css/style.css" rel="stylesheet">
<link href="~/Content/Css/style.css" rel="stylesheet">
<link href="/Content/Admin/css/style-responsive.css" rel="stylesheet" />

<div class="content">
    <div class="container">
        <div class="row">
            <aside class="profile-nav col-lg-3">
                <section class="panel">
                    <div class="user-heading round">
                        <a href="#">
                        </a>
                        <h1>@User.Identity.Name</h1>
                        <p></p>
                    </div>
                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="/Uye/Hesabim"> <i class="icon-user"></i>Hesabım</a></li>
                        <li class="active"><a href="/Uye/Adreslerim"> <i class="icon-calendar"></i> Adreslerim <span class="label label-danger pull-right r-activity"></span></a></li>
                        <li><a href="/Uye/Siparislerim"> <i class="icon-calendar"></i> Siparişlerim <span class="label label-danger pull-right r-activity"></span></a></li>
                        <li><a href="/Uye/Yorumlarim"> <i class="icon-calendar"></i> Yorumlarım <span class="label label-danger pull-right r-activity"></span></a></li>
                    </ul>
                </section>
            </aside>
            <aside class="profile-info col-lg-9">
                <section class="panel">
                    <div class="panel-body bio-graph-info">
                        <h1> Yeni Adres Ekle</h1>
                        <form action="/Uye/AdresEkle" method="post" class="form-horizontal" role="form">
                            <div class="form-group">
                                <div class="col-lg-6">
                                    <input type="hidden" class="form-control" name="MusteriID" id="f-name" value="@Model.UserId">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Adres Adı</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="Adi" id="f-name" placeholder=" ">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Adres</label>
                                <div class="col-lg-10">
                                    <textarea name="Adres" id="" class="form-control" cols="30" rows="10"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button type="submit" class="btn btn-success">Kaydet</button>
                                    <button type="button" class="btn btn-default">İptal</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </aside>
        </div>
    </div>
</div>

<script src="/Content/Admin/js/jquery.js"></script>
<script src="/Content/Admin/js/bootstrap.min.js"></script>
<script class="include" type="text/javascript" src="/Content/Admin/js/jquery.dcjqaccordion.2.7.js"></script>
<script src="/Content/Admin/js/jquery.scrollTo.min.js"></script>
<script src="/Content/Admin/js/jquery.nicescroll.js" type="text/javascript"></script>
<script src="/Content/Admin/assets/jquery-knob/js/jquery.knob.js"></script>
<script src="/Content/Admin/js/respond.min.js"></script>
<script>
    //knob
    $(".knob").knob();</script>

