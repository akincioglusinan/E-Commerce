
@{
    ViewBag.Title = "HesapDuzenle";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}
@using eTicaret.WebUI.Models
@model eTicaret.WebUI.Models.aspnet_Membership

<link rel="shortcut icon" href="/Content/Admin/img/favicon.png">
<!-- Bootstrap core CSS -->
<link href="/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
<link href="/Content/Admin/css/bootstrap-reset.css" rel="stylesheet">
<!--external css-->
<link href="/Content/Admin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
<!-- Custom styles for this template -->
<link href="/Content/Zeon/css/style.css" rel="stylesheet">
<link href="~/Content/Css/style.css" rel="stylesheet">
<link href="/Content/Admin/css/style-responsive.css" rel="stylesheet" />

<div class="content">
    <div class="container">
        <div class="row">
            <aside class="profile-nav col-lg-3">
                <section class="panel">
                    <div class="user-heading round">
                        <a href="#">
                        </a>
                        <h1>@User.Identity.Name</h1>
                        <p></p>
                    </div>
                    <ul class="nav nav-pills nav-stacked">
                        <li class="active"><a href="/Uye/Hesabim"> <i class="icon-user"></i>Hesabım</a></li>
                        <li><a href="/Uye/Adreslerim"> <i class="icon-calendar"></i> Adreslerim <span class="label label-danger pull-right r-activity">2</span></a></li>
                        <li><a href="/Uye/Siparislerim"> <i class="icon-calendar"></i> Siparişlerim <span class="label label-danger pull-right r-activity">5</span></a></li>
                        <li><a href="/Uye/Yorumlarim"> <i class="icon-calendar"></i> Yorumlarım <span class="label label-danger pull-right r-activity">9</span></a></li>
                    </ul>
                </section>
            </aside>
            <aside class="profile-info col-lg-9">
                <section class="panel">
                    <div class="panel-body bio-graph-info">
                        <h1> Hesap Bilgileri Düzenle</h1>
                        @if (ViewBag.Mu == null)
                        {
                            <form action="/Uye/HesapDuzenle" method="post" class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-lg-2 control-label"></label>
                                    <div class="col-lg-6">
                                        <input type="hidden" class="form-control" id="email" name="Id" value="@Model.UserId">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label"></label>
                                    <div class="col-lg-6">
                                        <input type="hidden" class="form-control" id="f-name" name="KullaniciAdi" value="@User.Identity.Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Email</label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="email" name="EMail" value="@Model.Email">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Ad</label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="f-name" name="Adi" placeholder=" ">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Soyad</label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" name="Soyadi" id="l-name" placeholder=" ">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Telefon</label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="mobile" name="Telefon" placeholder=" ">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button type="submit" class="btn btn-success">Kaydet</button>
                                        <button type="button" class="btn btn-default">İptal</button>
                                    </div>
                                </div>
                            </form>
                        }
                        else
                        {
                            <form action="/Uye/HesapDuzenle" method="post" class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label class="col-lg-2 control-label"></label>
                                    <div class="col-lg-6">
                                        <input type="hidden" class="form-control" id="email" name="Id" value="@Model.UserId">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label"></label>
                                    <div class="col-lg-6">
                                        <input type="hidden" class="form-control" id="f-name" name="KullaniciAdi" value="@User.Identity.Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Email</label>
                                    <div class="col-lg-6">
                                        <input type="hidden" class="form-control" id="email" name="EMail" value="@Model.Email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">TC Kimlik No</label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="f-name" name="Tckn" value="@ViewBag.Mu.Tckn">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Ad</label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="f-name" name="Adi" value="@ViewBag.Mu.Adi">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Soyad</label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" name="Soyadi" id="l-name" placeholder=" " value="@ViewBag.Mu.Soyadi">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Telefon</label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="mobile" name="Telefon" placeholder=" " value="@ViewBag.Mu.Telefon">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button type="submit" class="btn btn-success">Kaydet</button>
                                        <button type="button" class="btn btn-default">İptal</button>
                                    </div>
                                </div>
                            </form>
                        }

                    </div>
                </section>
            </aside>
        </div>
    </div>
</div>

<script src="/Content/Admin/js/jquery.js"></script>
<script src="/Content/Admin/js/bootstrap.min.js"></script>
<script class="include" type="text/javascript" src="/Content/Admin/js/jquery.dcjqaccordion.2.7.js"></script>
<script src="/Content/Admin/js/jquery.scrollTo.min.js"></script>
<script src="/Content/Admin/js/jquery.nicescroll.js" type="text/javascript"></script>
<script src="/Content/Admin/assets/jquery-knob/js/jquery.knob.js"></script>
<script src="/Content/Admin/js/respond.min.js"></script>
<script>
    //knob
    $(".knob").knob();</script>

